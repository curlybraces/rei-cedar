/**
  * REI Cedar Button variables:
  * This file provides a contract between
  * design tokens and cedar non-changing variables.
  *
  * TOC:
  * Button Themes
  ** Settings
  ** Active
  ** Focus
  ** Disabled
  * Button Sizes
*/

/**
  * button themes
*/

/* default */
$btn-bg: $sys-color-btn-primary;
$btn-border: $sys-color-btn-primary-border;
$btn-radius: $radius-button;
$btn-text: $sys-color-btn-primary-text;
$btn-font-family: $sys-font-redwood-ui-30-font-family;
$btn-font-size: $sys-font-redwood-ui-30-font-size;
$btn-font-style: $sys-font-redwood-ui-30-font-style;
$btn-font-weight: $sys-font-redwood-ui-30-font-weight;
$btn-line-height: $sys-font-redwood-ui-30-line-height;

/* Secondary */
$btn-secondary-bg: $sys-color-btn-secondary;
$btn-secondary-border: $sys-color-btn-secondary-border;
$btn-secondary-text: $sys-color-btn-secondary-text;

/**
  * active
*/

/* default */
$btn-active-bg: $sys-color-btn-primary-hover;
$btn-active-border: $sys-color-btn-primary-hover-border;
$btn-active-text: $sys-color-btn-primary-hover-text;

/* secondary active */
$btn-secondary-active-bg: $sys-color-btn-secondary-hover;
$btn-secondary-active-border: $sys-color-btn-secondary-hover-border;
$btn-secondary-active-text: $sys-color-btn-secondary-text;

/**
  * focus
*/

/* default */
$btn-focus-border: $sys-color-btn-border-focus;

/* secondary */
$btn-secondary-focus-border: $sys-color-btn-border-focus;

/**
  * disabled
*/

/* default */
$btn-disabled-bg: $sys-color-btn-primary-disabled;
$btn-disabled-border: $sys-color-btn-primary-disabled-border;
$btn-disabled-text: $sys-color-btn-primary-disabled-text;

/* secondary */
$btn-secondary-disabled-bg: $sys-color-btn-secondary-disabled;
$btn-secondary-disabled-border: $sys-color-btn-secondary-disabled-border;
$btn-secondary-disabled-text: $sys-color-btn-secondary-disabled-text;

/**
  * button sizes
*/

/* small */
$btn--sm-font-family: $sys-font-redwood-ui-30-font-family;
$btn--sm-font-size: $sys-font-redwood-ui-30-font-size;
$btn--sm-font-style: $sys-font-redwood-ui-30-font-style;
$btn--sm-font-weight: $sys-font-redwood-ui-30-font-weight;
$btn--sm-line-height: $sys-font-redwood-ui-30-line-height;

/* extra small */
$btn--xs-font-family: $sys-font-redwood-ui-20-font-family;
$btn--xs-font-size: $sys-font-redwood-ui-20-font-size;
$btn--xs-font-style: $sys-font-redwood-ui-20-font-style;
$btn--xs-font-weight: $sys-font-redwood-ui-20-font-weight;
$btn--xs-line-height: $sys-font-redwood-ui-20-line-height;
