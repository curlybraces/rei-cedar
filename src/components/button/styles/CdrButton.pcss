/* ==========================================================================
  # CdrButton

  TOC:

    :Base Styles
      :States
    :Modifiers
      :Style variants
        :Secondary
    :Size variants
      :large
      :medium
      :small
    :full-width
    :icon-only
    :on-dark
    :Breakpoint variants
      :xs
      :sm
      :md
      :lg
========================================================================== */

.cdr-button {
  @include redwood-display-30;

  background-color: $button-background-color;
  box-shadow: $button-box-shadow;
  border: none;
  border-radius: $button-border-radius;
  color: $button-color;
  cursor: pointer;
  display: inline-flex;
  fill: $button-color;
  outline: none;
  padding: $cdr-space-inset-one-x-squish;
  text-align: left;
  text-decoration: none;
  text-transform: none;
  overflow: visible;

  & > :global(&__icon) {
    align-self: center;
    fill: inherit;
    margin-right: $cdr-space-quarter-x;
  }

  /* States
    ---------- */

  &:hover,
  &:active,
  &:focus {
    background-color: $button-hover-background-color;
    color: $button-hover-color;
    box-shadow: $button-hover-box-shadow;
    text-decoration: none;
    outline: none;
    outline-offset: 0;
    fill: $button-hover-color;
  }

  &:focus {
    outline: $default-outline;
  }

  &[disabled] {
    background-color: $button-disabled-background-color;
    box-shadow: $button-disabled-box-shadow;
    color: $button-disabled-color;
    cursor: not-allowed;
  }

  /* Modifier style variants
    ========================================================================== */

  /* Secondary
     ========== */

  &--secondary {
    background-color: $button-secondary-background-color;
    box-shadow: $button-secondary-box-shadow;
    color: $button-secondary-color;
    fill: $button-secondary-color;

    /* States
    ---------- */

    &:hover,
    &:active,
    &:focus {
      background-color: $button-secondary-hover-background-color;
      box-shadow: $button-secondary-box-shadow;
      color: $button-secondary-hover-color;
      fill: $button-secondary-hover-color;
    }

    &[disabled] {
      background-color: $button-secondary-disabled-background-color;
      box-shadow: $button-secondary-disabled-box-shadow;
      color: $button-secondary-disabled-color;
      cursor: not-allowed;
      fill: $button-secondary-disabled-color;
    }
  }

  /* Size variants
    ========================================================================== */

  /* Large
     ========== */
  &--large {
    @include redwood-display-40;

    padding: $cdr-space-inset-one-and-a-half-x-squish;

    &.cdr-button--has-icon {
      padding-left: calc($cdr-space-one-and-a-half-x - $cdr-space-quarter-x);
    }
  }

  /* Medium
     ========== */
  &--medium {
    @include redwood-display-30;

    padding: $cdr-space-inset-one-x-squish;

    &.cdr-button--has-icon {
      padding-left: calc($cdr-space-one-x - $cdr-space-quarter-x);
    }
  }

  /* Small
     ========== */
  &--small {
    @include redwood-display-20;

    padding: $cdr-space-inset-three-quarter-x-squish;

    &.cdr-button--has-icon {
      padding-left: calc($cdr-space-three-quarter-x - $cdr-space-quarter-x);
    }

    & > :global(.cdr-button__icon) {
      /* This is to correct icon size vs line height */
      @include small-button-icon();
    }
  }

  /* Full Width
     ========== */
  &--full-width {
    width: 100%;
    justify-content: center;
  }

  /* Icon Only
     ========= */

  &--icon-only {
    background: none;
    border: none;
    box-shadow: none;
    display: inline-block;
    padding: $cdr-space-inset-half-x;
    padding-right: calc($cdr-space-inset-half-x - $cdr-space-quarter-x);
    fill: $heart-of-darkness;

    &:hover,
    &:active,
    &:focus {
      background: none;
      box-shadow: none;
      fill: $heart-of-darkness;
    }

    &.cdr-button--on-dark {
      fill: $moon-shot;
    }
  }

  /* Breakpoint variants
    ========================================================================== */

  @mixin auto-icon() {
    width: $cdr-icon-size;
    height: $cdr-icon-size;
  }

  @mixin small-button-icon() {
    width: 20px;
    height: 20px;
  }

  /* @breakpoint--xs
    0px - 767px
    ========== */
  @media (--xs-mq-only) {
    &--small\@breakpoint--xs {
      @include redwood-display-20;

      padding: $cdr-space-inset-three-quarter-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include small-button-icon();
      }
    }

    &--medium\@breakpoint--xs {
      @include redwood-display-30;

      padding: $cdr-space-inset-one-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }

    &--large\@breakpoint--xs {
      @include redwood-display-40;

      padding: $cdr-space-inset-one-and-a-half-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }
  }

  /* @breakpoint--sm
    768px - 991px
    ========== */
  @media (--sm-mq-only) {
    &--small\@breakpoint--sm {
      @include redwood-display-20;

      padding: $cdr-space-inset-three-quarter-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include small-button-icon();
      }
    }

    &--medium\@breakpoint--sm {
      @include redwood-display-30;

      padding: $cdr-space-inset-one-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }

    &--large\@breakpoint--sm {
      @include redwood-display-40;

      padding: $cdr-space-inset-one-and-a-half-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }
  }

  /* @breakpoint--md
    992px - 1199px
    ========== */
  @media (--md-mq-only) {
    &--small\@breakpoint--md {
      @include redwood-display-20;

      padding: $cdr-space-inset-three-quarter-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include small-button-icon();
      }
    }

    &--medium\@breakpoint--md {
      @include redwood-display-30;

      padding: $cdr-space-inset-one-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }

    &--large\@breakpoint--md {
      @include redwood-display-40;

      padding: $cdr-space-inset-one-and-a-half-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }
  }

  /* @breakpoint--lg
    1200px and up
    ========== */

  @media (--lg-mq-only) {
    &--small\@breakpoint--lg {
      @include redwood-display-20;

      padding: $cdr-space-inset-three-quarter-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include small-button-icon();
      }
    }

    &--medium\@breakpoint--lg {
      @include redwood-display-30;

      padding: $cdr-space-inset-one-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }

    &--large\@breakpoint--lg {
      @include redwood-display-40;

      padding: $cdr-space-inset-one-and-a-half-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }
  }
}
