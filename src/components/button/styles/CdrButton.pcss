/* ==========================================================================
  # CdrButton

  TOC:

    :Base Styles
      :States
    :Modifiers
      :Style variants
        :Secondary
    :Size variants
      :large
      :medium
      :small
    :full-width
    :icon-only
    :on-dark
    :Breakpoint variants
      :xs
      :sm
      :md
      :lg
========================================================================== */

.cdr-button {
  @include redwood-display-30; // TODO: typo mixins >_<

  background-color: $cdr-button-primary-color-background;
  box-shadow: $cdr-button-primary-prominence-box-shadow;
  color: $cdr-button-primary-color-text;
  fill: $cdr-button-primary-color-fill;

  border: $cdr-button-base-color-border;
  border-radius: $cdr-button-base-size-border-radius;
  cursor: $cdr-button-base-ui-cursor;
  display: $cdr-button-base-space-display;
  outline: $cdr-button-base-color-outline;
  overflow: $cdr-button-base-space-overflow;
  padding: $cdr-button-base-space-padding;
  text-align: $cdr-button-base-text-align;
  text-decoration: $cdr-button-base-text-decoration;
  text-transform: $cdr-button-base-text-transform;

  & > :global(&__icon) {
    align-self: $cdr-button-base-space-icon-align-self;
    margin-right: $cdr-button-base-space-icon-margin-right;

    fill: $cdr-button-primary-color-icon-fill; // ? is this base or primary?
  }
  /* States
    ---------- */

  &:hover {
    background-color: $cdr-button-primary-color-background-hover;
    color: $cdr-button-primary-color-text-hover;
    box-shadow: $cdr-button-primary-prominence-box-shadow-hover;
    fill: $cdr-button-primary-color-fill-hover;

    outline: $cdr-button-base-color-outline-hover;
    outline-offset: $cdr-button-base-space-outline-offset-hover;
    text-decoration: $cdr-button-base-text-decoration-hover;
  }

  &:active {
    background-color: $cdr-button-primary-color-background-active;
    color: $cdr-button-primary-color-text-active;
    box-shadow: $cdr-button-primary-prominence-box-shadow-active;
    fill: $cdr-button-primary-color-fill-active;

    outline: $cdr-button-base-color-outline-active;
    outline-offset: $cdr-button-base-space-outline-offset-active;
    text-decoration: $cdr-button-base-text-decoration-active;
  }

  &:focus {
    background-color: $cdr-button-primary-color-background-focus;
    color: $cdr-button-primary-color-text-focus;
    box-shadow: $cdr-button-primary-prominence-box-shadow-focus;
    fill: $cdr-button-primary-color-fill-focus;

    outline: $cdr-button-base-color-outline-focus;
    outline-offset: $cdr-button-base-space-outline-offset-focus;
    text-decoration: $cdr-button-base-text-decoration-focus;
  }

  &[disabled] {
    background-color: $cdr-button-primary-color-background-disabled;
    box-shadow: $cdr-button-primary-prominence-box-shadow-disabled;
    color: $cdr-button-primary-color-text-disabled;

    cursor: $cdr-button-base-ui-cursor-disabled;
  }

  /* Modifier style variants
    ========================================================================== */

  /* Secondary
     ========== */
  &--secondary {
    background-color: $cdr-button-secondary-color-background;
    box-shadow: $cdr-button-secondary-prominence-box-shadow;
    color: $cdr-button-secondary-color-text;
    fill: $cdr-button-secondary-color-fill;

    /* States
    ---------- */

    &:hover {
      background-color: $cdr-button-secondary-color-background-hover;
      box-shadow: $cdr-button-secondary-prominence-box-shadow-hover;
      color: $cdr-button-secondary-color-text-hover;
      fill: $cdr-button-secondary-color-fill-hover;
    }

    &:active {
      background-color: $cdr-button-secondary-color-background-active;
      box-shadow: $cdr-button-secondary-prominence-box-shadow-active;
      color: $cdr-button-secondary-color-text-active;
      fill: $cdr-button-secondary-color-fill-active;
    }

    &:focus {
      background-color: $cdr-button-secondary-color-background-focus;
      box-shadow: $cdr-button-secondary-prominence-box-shadow-focus;
      color: $cdr-button-secondary-color-text-focus;
      fill: $cdr-button-secondary-color-fill-focus;
    }

    &[disabled] {
      background-color: $cdr-button-secondary-color-background-disabled;
      box-shadow: $cdr-button-secondary-prominence-box-shadow-disabled;
      color: $cdr-button-secondary-color-text-disabled;
      fill: $cdr-button-secondary-color-fill-disabled;
    }
  }

  /* Size variants
    ========================================================================== */

  /* Large
     ========== */
  &--large {
    @include redwood-display-40; // TODO: typo mixins >_<

    padding: $cdr-button-base-space-padding-large;

    &.cdr-button--has-icon {
      padding-left: $cdr-button-base-space-padding-left-has-icon-large;
    }

    & > :global(.cdr-button__icon) {
      /* This is to correct icon size vs line height */
      width: $cdr-button-base-size-width-icon-large;
      height: $cdr-button-base-size-height-icon-large;
    }
  }

  /* Medium
     ========== */
  &--medium {
    @include redwood-display-30; // TODO: typo mixins >_<

    padding: $cdr-button-base-space-padding-medium;

    &.cdr-button--has-icon {
      padding-left: $cdr-button-base-space-padding-left-has-icon-medium;
    }

    & > :global(.cdr-button__icon) {
      /* This is to correct icon size vs line height */
      width: $cdr-button-base-size-width-icon-medium;
      height: $cdr-button-base-size-height-icon-medium;
    }
  }

  /* Small
     ========== */
  &--small {
    @include redwood-display-20; // TODO: typo mixins >_<
    padding: $cdr-button-base-space-padding-small;

    &.cdr-button--has-icon {
      padding-left: $cdr-button-base-space-padding-left-has-icon-small;
    }

    & > :global(.cdr-button__icon) {
      /* This is to correct icon size vs line height */
      width: $cdr-button-base-size-width-icon-small;
      height: $cdr-button-base-size-height-icon-small;
    }
  }

  /* Full Width
     ========== */
  &--full-width {
    width: $cdr-button-base-size-width-full-width;
    justify-content: $cdr-button-base-space-justify-content-full-width;
  }

  /* Icon Only
     ========= */

  &--icon-only {
    background: $cdr-button-base-color-background-icon-only;
    border: $cdr-button-base-color-border-icon-only;
    box-shadow: $cdr-button-base-prominence-box-shadow-icon-only;
    display: $cdr-button-base-space-display-icon-only;

    padding: $cdr-button-base-space-padding-icon-only;
    padding-right: $cdr-button-base-space-padding-right-icon-only;

    fill: $cdr-button-base-color-fill-icon-only;

    &:hover {
      background: $cdr-button-base-color-background-icon-only-hover;
      box-shadow: $cdr-button-base-color-fill-icon-only-hover;
      fill: $cdr-button-base-prominence-box-shadow-icon-only-hover;
    }

    &:active {
      background: $cdr-button-base-color-background-icon-only-active;
      box-shadow: $cdr-button-base-color-fill-icon-only-active;
      fill: $cdr-button-base-prominence-box-shadow-icon-only-active;
    }

    &:focus {
      background: $cdr-button-base-color-background-icon-only-focus;
      box-shadow: $cdr-button-base-color-fill-icon-only-focus;
      fill: $cdr-button-base-prominence-box-shadow-icon-only-focus;
    }

    &.cdr-button--on-dark {
      fill: $cdr-button-base-color-fill-icon-only-darkmode;
    }
  }

  /* Breakpoint variants
    ========================================================================== */

  @mixin auto-icon() {
    width: $cdr-icon-size;
    height: $cdr-icon-size;
  }

  @mixin small-button-icon() {
    width: 20px;
    height: 20px;
  }

  /* @xs
    0px - 767px
    ========== */
  @media (--xs-mq-only) {
    &--small\@xs {
      @include redwood-display-20;

      padding: $cdr-space-inset-three-quarter-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include small-button-icon();
      }
    }

    &--medium\@xs {
      @include redwood-display-30;

      padding: $cdr-space-inset-one-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }

    &--large\@xs {
      @include redwood-display-40;

      padding: $cdr-space-inset-one-and-a-half-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }
  }

  /* @sm
    768px - 991px
    ========== */
  @media (--sm-mq-only) {
    &--small\@sm {
      @include redwood-display-20;

      padding: $cdr-space-inset-three-quarter-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include small-button-icon();
      }
    }

    &--medium\@sm {
      @include redwood-display-30;

      padding: $cdr-space-inset-one-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }

    &--large\@sm {
      @include redwood-display-40;

      padding: $cdr-space-inset-one-and-a-half-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }
  }

  /* @md
    992px - 1199px
    ========== */
  @media (--md-mq-only) {
    &--small\@md {
      @include redwood-display-20;

      padding: $cdr-space-inset-three-quarter-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include small-button-icon();
      }
    }

    &--medium\@md {
      @include redwood-display-30;

      padding: $cdr-space-inset-one-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }

    &--large\@md {
      @include redwood-display-40;

      padding: $cdr-space-inset-one-and-a-half-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }
  }

  /* @lg
    1200px and up
    ========== */

  @media (--lg-mq-only) {
    &--small\@lg {
      @include redwood-display-20;

      padding: $cdr-space-inset-three-quarter-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include small-button-icon();
      }
    }

    &--medium\@lg {
      @include redwood-display-30;

      padding: $cdr-space-inset-one-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }

    &--large\@lg {
      @include redwood-display-40;

      padding: $cdr-space-inset-one-and-a-half-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }
  }
}
