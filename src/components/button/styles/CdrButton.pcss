/* ==========================================================================
  # CdrButton

  TOC:

    :Base Styles
      :States
    :Modifiers
      :Style variants
        :Secondary
    :Size variants
      :large
      :medium
      :small
    :full-width
    :icon-only
    :on-dark
    :Breakpoint variants
      :xs
      :sm
      :md
      :lg
========================================================================== */

.cdr-button {
  @include redwood-display-30; // TODO: typo mixins >_<

  background-color: $cdr-button-primary-color-background-lightmode;
  border: $cdr-button-primary-color-border-lightmode;
  border-radius: $cdr-button-primary-size-border-radius-lightmode;
  box-shadow: $cdr-button-primary-prominence-box-shadow-lightmode;
  color: $cdr-button-primary-color-text-lightmode;
  cursor: $cdr-button-primary-ui-cursor-lightmode;
  display: $cdr-button-primary-space-display-lightmode;
  fill: $cdr-button-primary-color-fill-lightmode;
  outline: $cdr-button-primary-color-outline-lightmode;
  overflow: $cdr-button-primary-space-overflow-lightmode;
  padding: $cdr-button-primary-space-padding-lightmode;
  text-align: $cdr-button-primary-text-align-lightmode;
  text-decoration: $cdr-button-primary-text-decoration-lightmode;
  text-transform: $cdr-button-primary-text-transform-lightmode;

  & > :global(&__icon) {
    align-self: $cdr-button-primary-space-align-self-icon-lightmode;
    fill: $cdr-button-primary-color-fill-icon-lightmode;
    margin-right: $cdr-button-primary-space-margin-right-icon-lightmode;
  }
  /* States
    ---------- */

  &:hover,
  &:active,
  &:focus {
    background-color: $cdr-button-primary-color-background-hover-active-focus-lightmode;
    color: $cdr-button-primary-color-text-hover-active-focus-lightmode;
    box-shadow: $cdr-button-primary-prominence-box-shadow-hover-active-focus-lightmode;
    fill: $cdr-button-primary-color-fill-hover-active-focus-lightmode;
    outline: $cdr-button-primary-color-outline-hover-active-focus-lightmode;
    outline-offset: $cdr-button-primary-space-outline-offset-hover-active-focus-lightmode;
    text-decoration: $cdr-button-primary-text-decoration-hover-active-focus-lightmode;
  }

  &:focus {
    outline: $cdr-button-primary-color-outline-focus-lightmode;
  }

  &[disabled] {
    background-color: $cdr-button-primary-color-background-disabled-lightmode;
    box-shadow: $cdr-button-primary-prominence-box-shadow-disabled-lightmode;
    color: $cdr-button-primary-color-text-disabled-lightmode;
    cursor: $cdr-button-primary-ui-cursor-disabled-lightmode;
  }

  /* Modifier style variants
    ========================================================================== */

  /* Secondary
     ========== */

  &--secondary {
    background-color: $cdr-button-secondary-color-background-lightmode;
    box-shadow: $cdr-button-secondary-prominence-box-shadow-lightmode;
    color: $cdr-button-secondary-color-text-lightmode;
    fill: $cdr-button-secondary-color-fill-lightmode;

    /* States
    ---------- */

    &:hover,
    &:active,
    &:focus {
      background-color: $cdr-button-secondary-color-background-hover-active-focus-lightmode;
      box-shadow: $cdr-button-secondary-prominence-box-shadow-hover-active-focus-lightmode;
      color: $cdr-button-secondary-color-text-hover-active-focus-lightmode;
      fill: $cdr-button-secondary-color-fill-hover-active-focus-lightmode;
    }

    &[disabled] {
      background-color: $cdr-button-secondary-color-background-disabled-lightmode;
      box-shadow: $cdr-button-secondary-prominence-box-shadow-disabled-lightmode;
      color: $cdr-button-secondary-color-color-disabled-lightmode;
      cursor: $cdr-button-secondary-ui-cursor-disabled-lightmode;
      fill: $cdr-button-secondary-color-fill-disabled-lightmode;
    }
  }

  /* Size variants
    ========================================================================== */

  /* Large
     ========== */
  &--large {
    @include redwood-display-40; // TODO: typo mixins >_<

    padding: $cdr-space-inset-one-and-a-half-x-squish;

    &.cdr-button--has-icon {
      padding-left: $cdr-button-primary-space-padding-left-has-icon-large-lightmode;
    }
  }

  /* Medium
     ========== */
  &--medium {
    @include redwood-display-30; // TODO: typo mixins >_<

    padding: $cdr-space-inset-one-x-squish;

    &.cdr-button--has-icon {
      padding-left: $cdr-button-primary-space-padding-left-has-icon-medium-lightmode;
    }
  }

  /* Small
     ========== */
  &--small {
    @include redwood-display-20; // TODO: typo mixins >_<

    padding: $cdr-space-inset-three-quarter-x-squish;

    &.cdr-button--has-icon {
      padding-left: $cdr-button-primary-space-padding-left-has-icon-small-lightmode;
    }

// \   this seems redudnant, as it is also set via the breakpoints?
    // & > :global(.cdr-button__icon) {
    //   /* This is to correct icon size vs line height */
    //   width: $cdr-button-primary-size-width-icon-small-lightmode;
    //   height: $cdr-button-primary-size-height-icon-small-lightmode;
    // }
  }

  /* Full Width
     ========== */
  &--full-width {
    width: $cdr-button-primary-size-width-full-width-lightmode;
    justify-content: $cdr-button-primary-space-justify-content-full-width-lightmode;
  }

  /* Icon Only
     ========= */

  &--icon-only {
    background: $cdr-button-primary-color-background-icon-only-lightmode;
    border: $cdr-button-primary-color-border-icon-only-lightmode;
    box-shadow: $cdr-button-primary-prominence-box-shadow-icon-only-lightmode;
    display: $cdr-button-primary-space-display-icon-only-lightmode;
    padding: $cdr-button-primary-space-padding-icon-only-lightmode;
    padding-right: $cdr-button-primary-space-padding-right-icon-only-lightmode;
    fill: $cdr-button-primary-color-fill-icon-only-lightmode;

    &:hover,
    &:active,
    &:focus {
      background: $cdr-button-primary-color-background-icon-only-hover-active-focus-lightmode;
      box-shadow: $cdr-button-primary-color-fill-icon-only-hover-active-focus-lightmode;
      fill: $cdr-button-primary-prominence-box-shadow-icon-only-hover-active-focus-lightmode;
    }

    &.cdr-button--on-dark {
      fill: $cdr-button-primary-color-fill-icon-only-on-dark-lightmode;
    }
  }

  /* Breakpoint variants
    ========================================================================== */

  @mixin auto-icon() {
    width: $cdr-icon-size;
    height: $cdr-icon-size;
  }

  @mixin small-button-icon() {
    width: 20px;
    height: 20px;
  }

// These breakpoints don't actually seem to do anything? they appear to apply these same styles regardless of what the breakpoint is?
// small is always redwood-display-20 no matter the breakpoint, etc.
  /* @xs
    0px - 767px
    ========== */
  @media (--xs-mq-only) {
    &--small\@xs {
      @include redwood-display-20;

      padding: $cdr-space-inset-three-quarter-x-squish;
      width: auto; // this is the same for all of the breakpoints, do we actually need it?

      & > :global(.cdr-button__icon) {
        @include small-button-icon(); // this is the same for all --small breapoints, should this be moved out of the breakpoints?
      }
    }

    &--medium\@xs {
      @include redwood-display-30;

      padding: $cdr-space-inset-one-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }

    &--large\@xs {
      @include redwood-display-40;

      padding: $cdr-space-inset-one-and-a-half-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }
  }

  /* @sm
    768px - 991px
    ========== */
  @media (--sm-mq-only) {
    &--small\@sm {
      @include redwood-display-20;

      padding: $cdr-space-inset-three-quarter-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include small-button-icon();
      }
    }

    &--medium\@sm {
      @include redwood-display-30;

      padding: $cdr-space-inset-one-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }

    &--large\@sm {
      @include redwood-display-40;

      padding: $cdr-space-inset-one-and-a-half-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }
  }

  /* @md
    992px - 1199px
    ========== */
  @media (--md-mq-only) {
    &--small\@md {
      @include redwood-display-20;

      padding: $cdr-space-inset-three-quarter-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include small-button-icon();
      }
    }

    &--medium\@md {
      @include redwood-display-30;

      padding: $cdr-space-inset-one-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }

    &--large\@md {
      @include redwood-display-40;

      padding: $cdr-space-inset-one-and-a-half-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }
  }

  /* @lg
    1200px and up
    ========== */

  @media (--lg-mq-only) {
    &--small\@lg {
      @include redwood-display-20;

      padding: $cdr-space-inset-three-quarter-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include small-button-icon();
      }
    }

    &--medium\@lg {
      @include redwood-display-30;

      padding: $cdr-space-inset-one-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }

    &--large\@lg {
      @include redwood-display-40;

      padding: $cdr-space-inset-one-and-a-half-x-squish;
      width: auto;

      & > :global(.cdr-button__icon) {
        @include auto-icon();
      }
    }
  }
}
