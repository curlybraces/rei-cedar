/* ==========================================================================
  # CdrLink

  TOC:

    :Base Styles
      :States
    :Modifiers
      :Style variants
        :Standalone
========================================================================== */

.cdr-link {
  font-family: $cdr-link-base-font-family;
  font-size: $cdr-link-base-font-size;
  line-height: $cdr-link-base-line-height;
  align-items: $cdr-link-base-align-items;
  background-color: $cdr-link-base-background-color;
  border: $cdr-link-base-border;
  margin: $cdr-link-base-margin;
  color: $cdr-link-base-color;
  cursor: $cdr-link-base-cursor;
  display: $cdr-link-base-display;
  fill: $cdr-link-base-fill;
  outline: $cdr-link-base-outline;
  padding: $cdr-link-base-padding;
  text-decoration: $cdr-link-base-text-decoration;
  vertical-align: $cdr-link-base-vertical-align;

  /* States
    ---------- */

  &:hover {
    color: $cdr-link-base-color-hover;
    outline: $cdr-link-base-outline-hover;
    text-decoration: $cdr-link-base-text-decoration-hover;
  }

  &:active {
    color: $cdr-link-base-color-active;
    outline: $cdr-link-base-outline-active;
    text-decoration: $cdr-link-base-text-decoration-active;
  }

  &:focus {
    color: $cdr-link-base-color-focus;
    outline: $cdr-link-base-outline-focus;
    outline-offset: $cdr-link-base-outline-offset-focus;
    text-decoration: $cdr-link-base-text-decoration-focus;
  }
}

/* Style variants
  ========================================================================== */

/* Standalone
    ========== */
.cdr-link--standalone {
  text-decoration: $cdr-link-standalone-text-decoration;

  &:hover {
    text-decoration: $cdr-link-standalone-text-decoration-hover;
  }

  &:active {
    text-decoration: $cdr-link-standalone-text-decoration-active;
  }

  &:focus {
    text-decoration: $cdr-link-standalone-text-decoration-focus;
  }

  &:visited {
    text-decoration: $cdr-link-standalone-text-decoration-visited;
  }
}

/* Light Theme */

$link-color-light: $cdr-color-text-link-lightmode;

/* Theme via cascade

:global(.cdr-bg--light) .cdr-link {
  color: $link-color;
  fill: $link-color;

  &:hover,
  &:active,
  &:focus {
    color: $link-color;
  }
}
*/

/* Theme via prop */

:global(.on-light).cdr-link {
  color: $link-color-light;
  fill: $link-color-light;

  /* States
    ---------- */

  &:hover,
  &:active,
  &:focus {
    color: $link-color-light;
  }
}

/* Dark Theme */

$link-color-dark: $cdr-color-text-link-darkmode;

/* Theme via cascade

:global(.cdr-bg--dark) .cdr-link {
  color: $link-color-dark;
  fill: $link-color-dark;

  &:hover,
  &:active,
  &:focus {
    color: $link-color-dark;
  }
}
*/

/* Theme via prop */

:global(.on-dark).cdr-link {
  color: $link-color-dark;
  fill: $link-color-dark;

  /* States
    ---------- */

  &:hover,
  &:active,
  &:focus {
    color: $link-color-dark;
  }
}
