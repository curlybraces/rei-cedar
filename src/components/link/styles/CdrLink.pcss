/* ==========================================================================
  # CdrLink

  TOC:

    :Base Styles
      :States
    :Modifiers
      :Style variants
        :Standalone
========================================================================== */

.cdr-link {
  font-family: $cdr-link-text-font-family;
  font-size: $cdr-link-text-font-size;
  line-height: $cdr-link-text-line-height;
  align-items: $cdr-link-space-align-items;
  background-color: $cdr-link-color-background;
  border: $cdr-link-color-border;
  margin: $cdr-link-space-margin;
  color: $cdr-link-color-text;
  cursor: $cdr-link-ui-cursor;
  display: $cdr-link-space-display;
  fill: $cdr-link-color-fill;
  outline: $cdr-link-color-outline;
  padding: $cdr-link-space-padding;
  text-decoration: $cdr-link-text-decoration;
  vertical-align: $cdr-link-space-vertical-align;

  /* States
    ---------- */

  &:hover {
    color: $cdr-link-color-text-hover;
    outline: $cdr-link-color-outline-hover;
    text-decoration: $cdr-link-text-decoration-hover;
  }

  &:active{
    color: $cdr-link-color-text-active;
    outline: $cdr-link-color-outline-active;
    text-decoration: $cdr-link-text-decoration-active;
  }


  &:focus {
    color: $cdr-link-color-text-focus;
    outline: $cdr-link-color-outline-focus;
    outline-offset: $cdr-link-space-outline-offset-focus;
    text-decoration: $cdr-link-text-decoration-focus;
  }
}

/* Style variants
  ========================================================================== */

/* Standalone
    ========== */
.cdr-link--standalone {
  text-decoration: $cdr-link-text-decoration-standalone;

  &:hover {
    text-decoration: $cdr-link-text-decoration-standalone-hover;
  }

  &:active {
    text-decoration: $cdr-link-text-decoration-standalone-active;
  }

  &:focus {
    text-decoration: $cdr-link-text-decoration-standalone-focus;
  }

  &:visited {
    text-decoration: $cdr-link-text-decoration-standalone-visited;
  }
}


/* Light Theme */

$link-color-light: $cdr-color-text-link-lightmode;
/* Theme via cascade

:global(.cdr-bg--light) .cdr-link {
  color: $link-color;
  fill: $link-color;

  &:hover,
  &:active,
  &:focus {
    color: $link-color;
  }
}
*/

/* Theme via prop */

:global(.on-light).cdr-link {
  color: $link-color-light;
  fill: $link-color-light;

  /* States
    ---------- */

  &:hover,
  &:active,
  &:focus {
    color: $link-color-light;
  }
}

/* Dark Theme */

$link-color-dark: $cdr-color-text-link-darkmode;

/* Theme via cascade

:global(.cdr-bg--dark) .cdr-link {
  color: $link-color-dark;
  fill: $link-color-dark;

  &:hover,
  &:active,
  &:focus {
    color: $link-color-dark;
  }
}
*/

/* Theme via prop */

:global(.on-dark).cdr-link {
  color: $link-color-dark;
  fill: $link-color-dark;

  /* States
    ---------- */

  &:hover,
  &:active,
  &:focus {
    color: $link-color-dark;
  }
}
