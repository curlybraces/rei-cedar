.cdr-caption {
  max-width: 530px;

  &__summary {
    @include redwood-display-20;

    margin-bottom: 0;

    & + .cdr-caption__credit {
      /* TODO: replace with spacing token */
      margin-top: 8px;
    }
  }

  &__credit {
    @include redwood-display-10;

    margin-bottom: 0;
  }
}
