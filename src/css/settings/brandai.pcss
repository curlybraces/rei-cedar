

// Card
$sys-color-activity-card: #ffffff;
$sys-color-activity-card-border: #e9e9e9;
$sys-color-activity-card-text: #2e2e2e;
$sys-color-activity-card-subtext: #767676;
$sys-color-activity-card-hover-text: #426c90;

// Form Inputs
$sys-color-input: #ffffff;
$sys-color-input-disabled: #e9e9e9;
$sys-color-input-border: #c5c5c5;

// Links
$sys-color-link: #347cb1;

// Search
$sys-color-search-icon: #767676;
$sys-color-search-secondary-icon: #c5c5c5;
$sys-color-search-standalone-icon: #2e2e2e;

/*
    Font Styles:
*/

// spruce-bdy-20 font style -- type
$sys-font-spruce-bdy-20-font-size: 18px;
$sys-font-spruce-bdy-20-line-height: 28px;
$sys-font-spruce-bdy-20-text-align: left;
$sys-font-spruce-bdy-20-color: #2e2e2e;
$sys-font-spruce-bdy-20-font-style: normal;
$sys-font-spruce-bdy-20-font-weight: 400;
$sys-font-spruce-bdy-20-font-family: Sentinel, Roboto, "Helvetica Neue", Helvetica, Arial, sans-serif;

@mixin sys-font-spruce-bdy-20 () {
  font-size: $sys-font-spruce-bdy-20-font-size;
  line-height: $sys-font-spruce-bdy-20-line-height;
  text-align: $sys-font-spruce-bdy-20-text-align;
  color: $sys-font-spruce-bdy-20-color;
  font-style: $sys-font-spruce-bdy-20-font-style;
  font-weight: $sys-font-spruce-bdy-20-font-weight;
  font-family: $sys-font-spruce-bdy-20-font-family;
}

// redwood-dsp-20 font style -- gerneral type
$sys-font-redwood-dsp-20-font-size: 14px;
$sys-font-redwood-dsp-20-line-height: 20px;
$sys-font-redwood-dsp-20-text-align: start;
$sys-font-redwood-dsp-20-color: #2e2e2e;
$sys-font-redwood-dsp-20-font-style: normal;
$sys-font-redwood-dsp-20-font-weight: 400;
$sys-font-redwood-dsp-20-font-family: Roboto;

@mixin sys-font-redwood-dsp-20 () {
  font-size: $sys-font-redwood-dsp-20-font-size;
  line-height: $sys-font-redwood-dsp-20-line-height;
  text-align: $sys-font-redwood-dsp-20-text-align;
  color: $sys-font-redwood-dsp-20-color;
  font-style: $sys-font-redwood-dsp-20-font-style;
  font-weight: $sys-font-redwood-dsp-20-font-weight;
  font-family: $sys-font-redwood-dsp-20-font-family;
}

// redwood-ui-30 font style -- select there is no equivilant in tokens - as the line-height values are not 1 to 1.
$sys-font-redwood-ui-30-font-size: 16px;
$sys-font-redwood-ui-30-line-height: 16px;
$sys-font-redwood-ui-30-text-align: start;
$sys-font-redwood-ui-30-color: #000000;
$sys-font-redwood-ui-30-font-style: normal;
$sys-font-redwood-ui-30-font-weight: 400;
$sys-font-redwood-ui-30-font-family: Roboto;

@mixin sys-font-redwood-ui-30 () {
  font-size: $sys-font-redwood-ui-30-font-size;
  line-height: $sys-font-redwood-ui-30-line-height;
  text-align: $sys-font-redwood-ui-30-text-align;
  color: $sys-font-redwood-ui-30-color;
  font-style: $sys-font-redwood-ui-30-font-style;
  font-weight: $sys-font-redwood-ui-30-font-weight;
  font-family: $sys-font-redwood-ui-30-font-family;
}

/*
    Measurements:
*/

// Space
$spacing-md: 16px;

// Radius
// card
$radius-card: 2px;
// select
$radius-input: 2px;

// Sizing cdr-inline
$sizing-size-closed: 0;
$sizing-size-xxs: 2px;
$sizing-size-md: 16px;
$sizing-size-xs: 4px;
$sizing-size-sm: 8px;
$sizing-size-md: 16px;
$sizing-size-lg: 32px;
$sizing-size-xl: 64px;
$sizing-size-xxl: 128px;

/*
    Shadows:
*/

// Elevation
//card
$shadow-prominence-10: 2px 2px 2px rgba(27, 28, 28, 0.4);
